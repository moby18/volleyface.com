{% extends 'VolleyFaceBundle::layout.html.twig' %}

{% block content %}

    <div class="section">
        <div class="container">
            <div class="row">
                <h1>{{ tournament.name }} - {{ season.name }}</h1>
            </div>
            <div class="row">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                    <tr>
                        <td>#</td>
                        <td>Дата</td>
                        <td>Час</td>
                        <td>Корт</td>
                        <td>Команда А</td>
                        <td>Команда Б</td>
                        <td>Результат</td>
                        <td>Трив.</td>
                    </tr>
                    </thead>
                    <tfoot></tfoot>
                    <tbody>
                    {% for round in rounds %}
                        <tr>
                            <td colspan="100" class="text-center"><strong>{{ round.name }}</strong></td>
                        </tr>
                        {% for game in round.games %}
                            <tr>
                                <td>{{ game.number }}</td>
                                <td>{% if game.date is not null %} {{ game.date|date("d/m") }} {% endif %}</td>
                                <td>{% if game.date is not null %} {{ game.date|date("H:i") }} {% endif %}</td>
                                <td>{{ game.cort }}</td>
                                <td class="{{  game.scoreSetHome > game.scoreSetAway ? "bold" : "" }}"><a href="{{ path('volley_face_team',{'team_id':game.homeTeam.id}) }}"> {{ game.homeTeam.name }} </a></td>
                                <td class="{{  game.scoreSetHome < game.scoreSetAway ? "bold" : "" }}"><a href="{{ path('volley_face_team',{'team_id':game.awayTeam.id}) }}"> {{ game.awayTeam.name }} </a></td>
                                <td>{{ game.score }}</td>
                                <td>{{ game.duration }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}